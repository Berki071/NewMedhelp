<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@null"
    android:padding="@dimen/base_margin_4dp">


    <Button
        android:id="@+id/next"
        style="@style/blueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_margin_4dp"
        android:text="Далее"
        android:layout_marginRight="@dimen/base_margin_16dp"
        android:layout_marginEnd="@dimen/base_margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dotBar"
        />

    <LinearLayout
        android:id="@+id/dotBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/skip"
        style="@style/blueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_margin_4dp"
        android:text="пропустить"
        android:layout_marginLeft="@dimen/base_margin_16dp"
        app:layout_constraintLeft_toRightOf="@+id/dotBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


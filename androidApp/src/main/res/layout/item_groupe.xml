<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_margin_16dp"
    android:layout_marginStart="@dimen/base_margin_16dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:background="@drawable/selector_grey_white"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="@dimen/base_margin_8dp"
    android:paddingEnd="@dimen/base_margin_8dp"
    >

    <ImageView
        android:id="@+id/ico"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/base_margin_8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_profile_item_title"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/base_margin_8dp"
        android:layout_marginRight="@dimen/base_margin_8dp"
        android:gravity="left|center_vertical"
        android:hardwareAccelerated="true"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ico"
        app:layout_constraintRight_toLeftOf="@+id/inf"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/inf"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_blue_400_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

